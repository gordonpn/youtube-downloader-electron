{
  "name": "youtube-downloader",
  "version": "0.2.0",
  "description": "YouTube downloader cross-platform desktop app built with Electron.js",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Gordon Pham-Nguyen",
  "license": "MIT",
  "devDependencies": {
    "electron": "^7.1.10",
    "electron-builder": "^22.4.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended",
      "eslint:recommended"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "arrowParens": "always",
    "printWidth": 90
  },
  "dependencies": {
    "open-file-explorer": "^1.0.2",
    "youtube-mp3-downloader": "^0.6.5",
    "ytdl-core": "^1.0.9"
  },
  "repository": {
    "url": "https://github.com/gpnn/youtube-downloader-electron"
  },
  "build": {
    "appId": "com.gpnn.youtube-downloader",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
