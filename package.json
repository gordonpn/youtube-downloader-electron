{
  "name": "youtube-downloader",
  "version": "0.2.4",
  "description": "YouTube downloader cross-platform desktop app built with Electron.js",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Gordon Pham-Nguyen",
  "license": "MIT",
  "devDependencies": {
    "electron-builder": "^22.6.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.1.0",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "clipboardy": "^2.3.0",
    "electron": "^8.2.5",
    "open-file-explorer": "^1.0.2",
    "progressbar.js": "git+https://github.com/kimmobrunfeldt/progressbar.js.git",
    "ytdl-core": "^2.1.1"
  },
  "repository": {
    "url": "https://github.com/gordonpn/youtube-downloader-electron"
  },
  "build": {
    "appId": "com.gordonpn.youtube-downloader",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
